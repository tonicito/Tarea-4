        $info.= "<br> total_pago: ".$this->gettotal_pago();
		$info.="<br>total_camion: ".$this->gettotal_camion()."<br>"."<br>";
        return $info;
	} 
	
    public function camion(&$total_pago){
        if($total_pago>3){
			
			echo "total de pago ";
